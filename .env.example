# AI Provider (Mastra uses OpenAI by default)
# ===========================================
OPENAI_API_KEY=sk-...

# Google Gemini for OCR (receipt scanning)
GOOGLE_API_KEY=AIza...

# ===========================================
# Billog API Configuration
# ===========================================

# JWT Secret (shared between agent and API)
BILLOG_JWT_SECRET=your-secret-here

