# ===========================================
# Billog Agent - Mastra AI Bookkeeper
# ===========================================

# OpenAI API Key (for GPT-4o)
OPENAI_API_KEY=sk-xxx

# Billog API Configuration
BILLOG_API_URL=http://localhost:8000
BILLOG_JWT_SECRET=your-jwt-secret

# ===========================================
# Channel: LINE Messaging API
# ===========================================

LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=

# ===========================================
# Channel: WhatsApp (via Baileys)
# ===========================================

WHATSAPP_ENABLED=false
WHATSAPP_SESSION_PATH=./data/whatsapp

# ===========================================
# Group Activation Settings
# ===========================================

# When should agent respond in groups?
# - mention: Only when mentioned (default)
# - always: Respond to all messages
GROUP_ACTIVATION_MODE=mention

# Patterns to detect mentions (comma-separated)
GROUP_MENTION_PATTERNS=@billog,billog

# ===========================================
# File Storage
# ===========================================

# Base URL for serving uploaded images (required for receipt processing)
# This should be your public URL (e.g., ngrok URL or domain)
# Production: https://billog-gateway.ngrok.app
BASE_URL=http://localhost:3000

# Directory for storing uploaded images
UPLOADS_DIR=./uploads
